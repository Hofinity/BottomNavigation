<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="BottomNavigationView">

        <!--    main attrs    -->
        <attr name="bm_backgroundColor" format="color" />
        <attr name="bm_itemsMode">
            <enum name="normal" value="0"/>
            <enum name="textOnly" value="1"/>
            <enum name="iconOnly" value="2"/>
            <enum name="hidden" value="3"/>
        </attr>

        <!--    item attrs    -->
        <attr name="bm_itemIconSize" format="dimension" />
        <attr name="bm_itemIconOnlySize" format="dimension" />
        <attr name="bm_itemTextSize" format="dimension" />
        <attr name="bm_activeItemColor" format="color" />
        <attr name="bm_inactiveItemColor" format="color" />
        <attr name="bm_activeItemTextColor" format="color" />
        <attr name="bm_inactiveItemTextColor" format="color" />

        <!--    center button attrs    -->
        <attr name="bm_centerButtonIcon" format="reference" />
        <attr name="bm_activeCenterButtonIconColor" format="color" />
        <attr name="bm_inactiveCenterButtonIconColor" format="color" />
        <attr name="bm_activeCenterButtonBackgroundColor" format="color"/>
        <attr name="bm_inactiveCenterButtonBackgroundColor" format="color" />

        <!--    border attrs    -->
        <attr name="bm_showBorder" format="boolean" />
        <attr name="bm_borderColor" format="color" />
        <attr name="bm_borderType">
            <enum name="linear" value="8"/>
            <enum name="centerCurved" value="9"/>
        </attr>

        <!--    badge attrs    -->
        <attr name="bm_badgeTextColor" format="color" />
        <attr name="bm_badgeBackgroundColor" format="color" />
        <attr name="bm_badgeShapeType">
            <enum name="filledOval" value="4"/>
            <enum name="notFilledOval" value="5"/>
            <enum name="filledRectangle" value="6"/>
            <enum name="notFilledRectangle" value="7"/>
        </attr>

    </declare-styleable>

</resources>